@{
    ViewBag.Title = "Регистрация";
}

<link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="~/css/style.css" rel="stylesheet" type="text/css">
@model Lucky.Date.Models.Account.RegisterModel

    <div class="block">
        <div class="block2">

            <h2>Регистрация</h2>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div id="log" class="form-group">
                        <label asp-for="Email">Введите Email</label><br />
                        <input width="250" class="form-control" type="text" asp-for="Email" />

                    </div>
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <div id="log" class="form-group">
                        <label asp-for="Password">Введите пароль</label><br />
                        <input width="250" class="form-control" asp-for="Password" />
                    </div>
                    <span class="text-danger" asp-validation-for="Password"> </span>
                    <div id="log" class="form-group">
                        <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                        <input width="250" class="form-control" asp-for="ConfirmPassword" />
                    </div>
                    <span class="text-danger" asp-validation-for="ConfirmPassword"> </span>
                    <div>
                        <input class="btn btn-outline-success" type="submit" value="Регистрация" />
                    </div>
                </div>
            </form>
        </div>
    </div>
