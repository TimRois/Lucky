@model Lucky.Date.Models.News

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <title>create</title>
</head>
<body>


    <div class="parent">
        <div class="block">

            <div class="block2">


                <h4 id="ppp">Добавление новости</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label>Короткое описание</label>
                                <input asp-for="shortDesc" class="form-control" />
                                <span asp-validation-for="shortDesc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Полное описание</label>
                                <input asp-for="Desc" class="form-control" />
                                <span asp-validation-for="Desc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Путь к картинке</label>
                                <input asp-for="img" class="form-control" />
                                <span asp-validation-for="img" class="text-danger"></span>
                            </div>

                            <div id="but1"> 
                                <a   id="link1" asp-controller="CRUD_NEWS" asp-action="Read">Назад</a>
                                <input type="submit" value="Создать" class="btn btn-primary" />

                            </div>

                        </form>
                    </div>
                </div>



            </div>

               
            </div>
        </div>



</body>
</html>
