@model Lucky.Date.Models.News

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <title>Редактирование обращения</title>
</head>
<body>

    <div class="block">
        <div class="block2">

            </div>
        </div>
    <h4 id="ppp">Новости</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update" asp-route-id="@Model">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label >Короткое описание</label>
                    <input asp-for="shortDesc" class="form-control" />
                    <span asp-validation-for="shortDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Полное описание</label>
                    <input asp-for="Desc" class="form-control" />
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label >Путь к картинке</label>
                    <input asp-for="img" class="form-control" />
                    <span asp-validation-for="img" class="text-danger"></span>
                </div>
                <div id="but1">
                    <a id="link1" asp-controller="CRUD_NEWS" asp-action="Read">Назад</a>
                    <input type="submit" value="Сохранить" asp-action="Update" asp-route-id="@Model" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


</body>
</html>
